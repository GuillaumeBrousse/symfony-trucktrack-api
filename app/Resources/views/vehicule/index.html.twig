{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vehicules list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Immatriculation</th>
                <th>Compteurkm</th>
                <th>State</th>
                <th>Isintervention</th>
                <th>Assurance</th>
                <th>Ct</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicule in vehicules %}
            <tr>
                <td><a href="{{ path('vehicule_show', { 'id': vehicule.id }) }}">{{ vehicule.id }}</a></td>
                <td>{{ vehicule.immatriculation }}</td>
                <td>{{ vehicule.compteurKm }}</td>
                <td>{% if vehicule.state %}Yes{% else %}No{% endif %}</td>
                <td>{% if vehicule.isIntervention %}Yes{% else %}No{% endif %}</td>
                <td>{% if vehicule.assurance %}{{ vehicule.assurance|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if vehicule.ct %}{{ vehicule.ct|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('vehicule_show', { 'id': vehicule.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('vehicule_edit', { 'id': vehicule.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vehicule_new') }}">Create a new vehicule</a>
        </li>
    </ul>
{% endblock %}
